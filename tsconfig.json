{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",  // This is the important part
    "paths": {
      "@src/*": ["cypress/*"],  // Example path mapping
      "@components/*": ["cypress/components/*"]
    }
  },
  "include": ["cypress"]
}